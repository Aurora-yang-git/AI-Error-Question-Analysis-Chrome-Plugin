{
  "name": "Question Analyzer",
  "version": "0.4",
  "manifest_version": 3,
  "description": "Automatically analyze questions on webpages and provide detailed explanations using AI.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel", "tabs", "scripting", "storage", "offscreen"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "minimum_chrome_version": "138",
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Analyze Question"
  }
}
